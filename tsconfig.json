{
    "compilerOptions": {
        "module": "commonjs", // Як будуть генеруватись модулі
        "noImplicitAny": true, // Не можа використувати any
        "removeComments": true, // видалити коментарі
        "sourceMap": true, // створювати MAP файли для відстеження помилок
        "outDir": "./dist", //  зберігати результати транспіляції
        "lib": ["dom", "es2015"] // підключення бібліотек
    },
    "include": ["./src/**/*.ts"], // включити в транспиляцию всі файли з розширенням ts
    "exclude": ["node_modules"] // ігнорувати
}
